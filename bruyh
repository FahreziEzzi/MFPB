<body id="page-top">
    <!-- ... (your existing body content) ... -->
    <div id="wrapper">

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">
                    <!-- Topbar Content -->
                </nav>
                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <h1 class="h3 mb-4 text-gray-800"><?= $infoBuku['judul'] ?></h1>

                    <!-- Book Info Card -->
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="card-title"><?= $infoBuku['judul'] ?></h5>
                        </div>
                        <div class="card-body">
                            <p class="card-text"><strong>Pengarang:</strong> <?= $infoBuku['penulis'] ?></p>
                            <p class="card-text"><strong>Penerbit:</strong> <?= $infoBuku['penerbit'] ?></p>
                        </div>
                    </div>

                    <!-- Ulasan Sidebar -->
                    <div class="ulasan-sidebar">
                        <div class="ulasan-title">Ulasan Buku</div>
                        <?php while ($ulasan = mysqli_fetch_assoc($resultUlasan)) : ?>
                            <!-- Ulasan Item -->
                            <div class="ulasan-item">
                                <strong><?= $ulasan['nama_lengkap'] ?></strong>
                                <p><?= $ulasan['ulasan'] ?></p>
                                <p><strong>Rating:</strong> <?= $ulasan['rating'] ?></p>
                            </div>
                        <?php endwhile ?>
                    </div>
                    <!-- End Ulasan Sidebar -->

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- Ulasan Sidebar -->
    <div class="ulasan-sidebar">
        <div class="ulasan-title">Ulasan Buku</div>
        <?php
        if ($infoBuku) {
            // Query ulasan buku
            $ulasanQuery = "SELECT ulasan_buku.id AS ulasan_id, user.nama_lengkap, ulasan_buku.ulasan, ulasan_buku.rating
                            FROM ulasan_buku
                            INNER JOIN user ON ulasan_buku.user = user.id
                            WHERE ulasan_buku.buku = $buku_id";
            $resultUlasan = mysqli_query($koneksi, $ulasanQuery);

            while ($ulasan = mysqli_fetch_assoc($resultUlasan)) :
        ?>
                <!-- Ulasan Item -->
                <div class="ulasan-item">
                    <strong><?= $ulasan['nama_lengkap'] ?></strong>
                    <p><?= $ulasan['ulasan'] ?></p>
                    <p><strong>Rating:</strong> <?= $ulasan['rating'] ?></p>
                </div>
        <?php
            endwhile;
        } else {
            echo "<p>Informasi buku tidak ditemukan.</p>";
        }
        ?>
    </div>
    <!-- End Ulasan Sidebar -->

