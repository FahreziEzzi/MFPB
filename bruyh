<?php
include "../koneksi.php";

// Ambil ID buku dari parameter URL
$buku_id = isset($_GET['id']) ? $_GET['id'] : 0;

// Query informasi buku
$infoBukuQuery = "SELECT buku.id AS buku_id, buku.judul, buku.penulis, buku.penerbit
                  FROM buku
                  WHERE buku.id = $buku_id";
$resultInfoBuku = mysqli_query($koneksi, $infoBukuQuery);

// Fetch informasi buku
$infoBuku = mysqli_fetch_assoc($resultInfoBuku);
?>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Ulasan</title>

    <!-- Custom fonts for this template-->
    <link href="../sbadmin/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="../sbadmin/css/sb-admin-2.min.css" rel="stylesheet">

    <!-- Bootstrap core CSS-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- DataTables CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.24/css/dataTables.bootstrap4.min.css">

    <!-- Custom styles for ulasan sidebar -->
    <style>
        .ulasan-sidebar {
            position: fixed;
            top: 80px;
            /* Sesuaikan dengan tinggi navbar Anda */
            right: 20px;
            width: 300px;
            background-color: #ffffff;
            border: 1px solid #dddddd;
            padding: 15px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .ulasan-title {
            font-size: 18px;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .ulasan-item {
            margin-bottom: 15px;
        }

        .ulasan-item p {
            margin-bottom: 5px;
        }
    </style>
</head>

<body id="page-top">
    <!-- ... (your existing body content) ... -->
    <div id="wrapper">

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">
                    <!-- Topbar Content -->
                </nav>
                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <h1 class="h3 mb-4 text-gray-800"><?= $infoBuku['judul'] ?></h1>

                    <!-- Book Info Card -->
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="card-title"><?= $infoBuku['judul'] ?></h5>
                        </div>
                        <div class="card-body">
                            <p class="card-text"><strong>Pengarang:</strong> <?= $infoBuku['penulis'] ?></p>
                            <p class="card-text"><strong>Penerbit:</strong> <?= $infoBuku['penerbit'] ?></p>
                        </div>
                    </div>

                    <!-- Ulasan Sidebar -->
                    <div class="ulasan-sidebar">
                        <div class="ulasan-title">Ulasan Buku</div>
                        <?php while ($ulasan = mysqli_fetch_assoc($resultUlasan)) : ?>
                            <!-- Ulasan Item -->
                            <div class="ulasan-item">
                                <strong><?= $ulasan['nama_lengkap'] ?></strong>
                                <p><?= $ulasan['ulasan'] ?></p>
                                <p><strong>Rating:</strong> <?= $ulasan['rating'] ?></p>
                            </div>
                        <?php endwhile ?>
                    </div>
                    <!-- End Ulasan Sidebar -->

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- Ulasan Sidebar -->
    <div class="ulasan-sidebar">
        <div class="ulasan-title">Ulasan Buku</div>
        <?php
        if ($infoBuku) {
            // Query ulasan buku
            $ulasanQuery = "SELECT ulasan_buku.id AS ulasan_id, user.nama_lengkap, ulasan_buku.ulasan, ulasan_buku.rating
                            FROM ulasan_buku
                            INNER JOIN user ON ulasan_buku.user = user.id
                            WHERE ulasan_buku.buku = $buku_id";
            $resultUlasan = mysqli_query($koneksi, $ulasanQuery);

            // Periksa apakah query berhasil dijalankan
            if ($resultUlasan) {
                while ($ulasan = mysqli_fetch_assoc($resultUlasan)) :
        ?>
                    <!-- Ulasan Item -->
                    <div class="ulasan-item">
                        <strong><?= $ulasan['nama_lengkap'] ?></strong>
                        <p><?= $ulasan['ulasan'] ?></p>
                        <p><strong>Rating:</strong> <?= $ulasan['rating'] ?></p>
                    </div>
        <?php
                endwhile;
            } else {
                echo "<p>Error dalam menjalankan query ulasan.</p>";
            }
        } else {
            echo "<p>Informasi buku tidak ditemukan.</p>";
        }
        ?>
    </div>
    <!-- End Ulasan Sidebar -->

    <!-- ... (your existing body content) ... -->
    <script src="../sbadmin/vendor/jquery/jquery.min.js"></script>
