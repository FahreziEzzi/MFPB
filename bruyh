            width: 300px;
            background-color: #ffffff;
            border: 1px solid #dddddd;
            padding: 15px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .ulasan-title {
            font-size: 18px;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .ulasan-item {
            margin-bottom: 15px;
        }

        .ulasan-item p {
            margin-bottom: 5px;
        }
